<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shortcut icon" href="/assets/logo2.png" type="image/x-icon" />
    <link rel="stylesheet" href="styles/index.css" />
    <title>Sign In</title>
  </head>
  <body>
    <nav>
      <li class="image">
        <a href="/">
          <img src="/assets/logo.png" width="200" alt="" />
        </a>
      </li>
      <div>
        <li></li>
        <li>
          <a href="sign"><%= dirs[0] %></a>
        </li>
        <li>
          <a href="/"><%= dirs[1] %></a>
        </li>
      </div>
    </nav>
    <script>
      function enviar () {
        var nombre = document.getElementById('user').value
        var correo = document.getElementById('email').value
        var pass = document.getElementById('pass').value
        var img = document.getElementById('img').value
        
        const user = {
          nombre,
          correo,
          pass,
          img
        }
    }
    </script>
    <form action="/index" method="post" enctype="multipart/form-data">
      <label for="file">Load User Image</label>
      <input id="img" type="file" name="file">
      <label for="name">Insert user name</label>
      <input id="user" type="text" placeholder="User Name" name="name" required>
      <label for="email">Insert user email</label>
      <input id="email" type="text" placeholder="Email" name="email" required>
      <label for="password">Insert user password</label>
      <input id="pass" type="text" placeholder="Password" name="password" required>
      <input type="submit" value="Sign in" onclick="enviar()">
    </form>
  </body>
</html>
